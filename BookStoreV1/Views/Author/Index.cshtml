@model IEnumerable<BookStoreV1.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1 >Index</h1>



<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>CRUD OP</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                    <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-dark" class="btn btn-dark hover-effect">Edit TEST</a>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-outline-success" }) 
                    @Html.ActionLink("Details", "Details", new { id=item.Id },new {@class="btn btn-outline-primary"}) 
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },new {@class="btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
